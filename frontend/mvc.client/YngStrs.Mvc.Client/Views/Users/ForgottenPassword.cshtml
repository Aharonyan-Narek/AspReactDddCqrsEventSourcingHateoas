@model object

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="total-wrap-content">
    <div class="login-section">
        <div class="social-links-top-container anim-block">
            <div class="social-links-top-inner anim-elem bottom">
                <div class="social-item">
                    <a href="https://facebook.com" class="top-social-link">
                        <span class="social-image-container fb">
                            <img src="~/images/icons/social/top-fb-gray.svg" alt="icon" class="social-image">
                            <img src="~/images/icons/social/top-fb-hover.svg" alt="icon" class="social-image-hover">
                        </span>
                    </a>
                </div>
                <div class="social-item">
                    <a href="https://instagram.com" class="top-social-link">
                        <span class="social-image-container instagram">
                            <img src="~/images/icons/social/top-instagram-gray.svg" alt="icon" class="social-image">
                            <img src="~/images/icons/social/top-instagram-hover.svg" alt="icon" class="social-image-hover">
                        </span>
                    </a>
                </div>
                <div class="social-item">
                    <a href="https://twitter.com" class="top-social-link">
                        <span class="social-image-container twitter">
                            <img src="~/images/icons/social/top-twitter-gray.svg" alt="icon" class="social-image">
                            <img src="~/images/icons/social/top-twitter-hover.svg" alt="icon" class="social-image-hover">
                        </span>
                    </a>
                </div>
            </div>
        </div>

        <div class="main-inner-content-wrap anim-block">

            <div class="login-title-wrap anim-elem top">
                <h1 class="title-big">Забравена парола</h1>
            </div>

            <div class="login-grid">

                <div class="registration-box" id="registration-box">
                    <div class="login-grid-wrap">

                        <div class="login-image-item anim-elem bottom">
                            <div class="bg-image" style="background-image: url('../../images/login/login-step2.jpg')"></div>
                        </div>

                        <div class="login-content-item anim-elem top">
                            <div class="login-content-item-wrap">
                                <form asp-action="ForgottenPassword" asp-controller="Users" class="registration-form" id="registration-form" autocomplete="off">
                                    <p></p>
                                    <div class="form-row required">
                                        <label for="email" class="label-form-fld">E-mail</label>
                                        <input type="text" class="form-fld" id="email" name="email">
                                        <div class="border-bottom"></div>
                                        <div class="tooltip-div"></div>
                                    </div>
                                    <div class="form-row btn-row">
                                        <button class="submit-btn" type="submit" id="submit-btn">ИЗПРАТИ</button>
                                    </div>
                                    <p></p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="success-registration-box" id="success-registration-box">
                    <div class="login-grid-wrap">
                        <div class="login-image-item">
                            <div class="bg-image" style="background-image: url('../../images/login/login-step3.jpg')"></div>
                        </div>
                        <div class="login-content-item">
                            <div class="login-content-item-wrap">
                                <div class="success-registration-content">
                                    <div class="success-registration-title-wrap">
                                        <h4 class="success-registration-title">
                                            Успех!
                                        </h4>
                                    </div>
                                    <div class="success-registration-icon">
                                        <div class="success-registration-image">
                                            <img src="~/images/login/message.svg" alt="icon" class="template-image">
                                        </div>
                                    </div>
                                    <div class="success-registration-text">
                                        <p>
                                            Е-mail с нова парола беше изпратен на предоставения адрес.
                                        </p>
                                    </div>
                                    <div class="success-registration-btn-container">
                                        <a href="./users/login" class="success-registration-btn">
                                            ПРОДЪЛЖЕТЕ
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
